Config { font = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
        , borderColor = "black"
        , border = TopB
        , bgColor = "black"
        , fgColor = "grey"
        , position = TopW L 100
        , commands = [ Run Weather "KPDX" ["-t","<tempF>F","--normal","green","--high","red","--low","lightblue"] 36000
                        , Run Network "eth8" ["--normal","green","--high","red"] 10
                        , Run MultiCpu ["-t", "<autototal>", "-L","3","-H","50","--normal","green","--high","red"] 10
                        , Run Memory ["-t","Mem: <usedratio>%", "-L","0","--normal","green", "--high","red"] 10
                        , Run Com "uname" ["-s","-r"] "" 36000
                        , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                        , Run StdinReader
                        ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = "%StdinReader% | %multicpu% | %memory% | %eth8% }{<fc=#ee9a00>%date%</fc> | %uname% | %KPDX% "
        }
